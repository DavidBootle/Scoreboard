extends subpage

block content 

    script(src='/javascripts/tools.js')
    script(src='/javascripts/bootstrap.min.js')

    //- Good Alert
    div(id='alert-box')

    div(id='page-content')
        h1 New Team
        form
            div(class='form-group mb-3')
                label(for='name') Team Name
                input(class='form-control', id='name', type='text', name='name', placeholder='Team Name')
            div(class='form-group mb-3')
                label(for='id') Team ID
                input(class='form-control', id='id', type='text', name='id', placeholder='0-XXX')
            div(class='form-group mb-3')
                label(for='score') Intitial Score
                input(class='form-control', id='score', type='number', name='score', placeholder='0')
        button(onclick='newTeam()', class='btn btn-primary') Create
        a(class='btn btn-outline-secondary ms-1', href='/tools') Cancel